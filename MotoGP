      { "name": "Andrea Dovizioso", "winLocation": "Mugello, Italy" }
    ],
    "totalWins": 3
  },
  "UK": {
    "winningResults": [
      { "name": "Cal Crutchlow", "winLocation": "Autodromo, Argentine" }
    ],
    "totalWins": 1
  }
}
